<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/coin_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/coin_image" />

    <TextView
        android:id="@+id/item_tv_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/coin_image"
        android:text="1000 聊币"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/item_tv_rmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="1000 rmb"
        android:textColor="@color/color_69"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/item_tv_give"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_tv_txt"
        android:text="赠送币"
        android:textColor="@color/orange"
        android:textSize="@dimen/text_size_13" />

    <View
        android:id="@+id/item_tv_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_tv_txt"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/light_gray_no" />
</RelativeLayout>