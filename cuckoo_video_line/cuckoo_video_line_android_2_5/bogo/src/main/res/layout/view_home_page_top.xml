<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="330dp">

        <com.youth.banner.Banner
            android:id="@+id/home_page_wallpaper"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_black_transparent">

        </RelativeLayout>

        <!--最高等级 二期功能-->
        <RelativeLayout
            android:id="@+id/user_grade_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/record_video_button_pressed"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/userinfo_bar_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/userinfo_bar_max"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <ImageView
                android:id="@+id/userinfo_bar_max_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userinfo_bar_max"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/charm_label_white" />

            <TextView
                android:id="@+id/userinfo_bar_max_number"
                style="@style/white_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userinfo_bar_max"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/userinfo_bar_max_img"
                android:text="@string/test_number2"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/user_info_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/ll_top_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_name_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userinfo_bar_userid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/userinfo_bar_userid"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <com.eliaovideo.videoline.widget.BGLevelTextView
                        android:id="@+id/tv_level"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:textSize="10dp" />

                    <ImageView
                        android:id="@+id/iv_auth_status"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/video_verified" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_name_info"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/userinfo_bar_userid"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/userinfo_bar_isonLine"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_beckoning_num" />

                    <TextView
                        android:id="@+id/userinfo_bar_isonLine_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="@string/userinfo_bar_isonLine"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_top_info"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fans_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/userinfo_bar_loveme"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_home_page_attention"
                    android:gravity="center"
                    android:text="@string/userinfo_bar_loveme"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="invisible" />

            </LinearLayout>


            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/ll_top_info"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_top_info">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userinfo_bar_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/userinfo_bar_time"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/userinfo_bar_good_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="@string/userinfo_bar_good"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/userinfo_bar_location_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/userinfo_bar_location"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contribution_btn"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="-20dp"
            android:layout_marginBottom="150dp"
            android:background="@drawable/bg_beckoning_num">

            <ImageView
                android:id="@+id/show_contribution_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/wealth_popularity_crown" />

            <TextView
                android:id="@+id/show_contribution_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/show_contribution_img"
                android:text="@string/show_contribution_text"
                android:textColor="@color/maintone"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/show_contribution_text_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/show_contribution_img"
                android:layout_alignBaseline="@+id/show_contribution_img"
                android:layout_marginLeft="10dp"
                android:text="@string/show_contribution_text_top"
                android:textColor="@color/maintone"
                android:textSize="8sp" />
        </RelativeLayout>


        <include layout="@layout/view_back_top_bar" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_select_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="微信号: ******"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_select_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="点击查看"
                android:textColor="@color/admin_color"
                android:textSize="13sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Q   Q号: ******"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_select_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="点击查看"
                android:textColor="@color/admin_color"
                android:textSize="13sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="手机号: ******"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_select_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="点击查看"
                android:textColor="@color/admin_color"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        style="@style/h_line"
        android:layout_height="1px" />

    <!--守护榜-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_guardian"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="守护榜" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_guardian_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <View
        style="@style/h_line"
        android:layout_height="1px" />


    <RelativeLayout
        android:id="@+id/list_bar_gift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:id="@+id/list_bar_gift_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/list_bar_gift_text"
            android:textSize="13sp" />

        <View
            android:id="@+id/view_line_gift"
            style="@style/h_line"
            android:layout_height="1px"
            android:layout_below="@+id/list_bar_gift_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/view_line_gift"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_bar_gift_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>


    </RelativeLayout>

    <View
        style="@style/h_line"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            style="@style/h_line"
            android:layout_height="1px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="与我视频聊天需要支付："
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="0币/分钟"
                android:textColor="@color/admin_color"
                android:textSize="13sp"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray3" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_btn_info"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="资料"
            android:textColor="@color/admin_color"
            android:textSize="@dimen/text_size_15" />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@color/colorGray3" />

        <TextView
            android:id="@+id/tv_btn_video"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="视频"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone" />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@color/colorGray3" />

        <TextView
            android:id="@+id/tv_btn_img"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="私照"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone" />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@color/colorGray3" />

        <TextView
            android:id="@+id/tv_btn_dynamic"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="动态"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_toRightOf="@+id/ll_chat"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/big_v_home_gift" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/send_gift"
                android:textSize="@dimen/text_size_8"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray3"
        android:visibility="gone" />


</LinearLayout>