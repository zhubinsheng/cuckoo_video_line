<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/up_layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="380dp">

            <com.youth.banner.Banner
                android:id="@+id/home_page_wallpaper"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_black_transparent">

            </RelativeLayout>

            <!--最高等级 二期功能-->
            <RelativeLayout
                android:id="@+id/user_grade_icon"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/record_video_button_pressed"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/userinfo_bar_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="@string/userinfo_bar_max"
                    android:textColor="@color/white"
                    android:textSize="8sp" />

                <ImageView
                    android:id="@+id/userinfo_bar_max_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userinfo_bar_max"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/charm_label_white" />

                <TextView
                    android:id="@+id/userinfo_bar_max_number"
                    style="@style/white_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userinfo_bar_max"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/userinfo_bar_max_img"
                    android:text="@string/test_number2"
                    android:textSize="12sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/user_info_bar"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:padding="10dp">


                <RelativeLayout
                    android:gravity="center_vertical"
                    android:id="@+id/ll_name_info"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_name_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/userinfo_bar_userid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/userinfo_bar_userid"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <com.eliaovideo.videoline.widget.BGLevelTextView
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ll_name_id"
                        android:id="@+id/tv_level"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:textSize="10dp" />

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_level"
                        android:id="@+id/userinfo_bar_isattestation"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/video_verified" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/userinfo_bar_loveme"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_home_page_attention"
                    android:gravity="center"
                    android:text="@string/userinfo_bar_loveme"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/ll_name_info"
                    android:layout_marginTop="10dp"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/view_line"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/userinfo_bar_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="@string/userinfo_bar_time"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/userinfo_bar_good_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/userinfo_bar_good"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/userinfo_bar_location_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/userinfo_bar_location"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/userinfo_bar_isonLine"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_beckoning_num" />

                    <TextView
                        android:id="@+id/userinfo_bar_isonLine_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="@string/userinfo_bar_isonLine"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/contribution_btn"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="100dp"
                android:layout_marginRight="-20dp"
                android:background="@drawable/bg_beckoning_num">

                <ImageView
                    android:id="@+id/show_contribution_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/wealth_popularity_crown" />

                <TextView
                    android:id="@+id/show_contribution_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/show_contribution_img"
                    android:text="@string/show_contribution_text"
                    android:textColor="@color/maintone"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/show_contribution_text_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/show_contribution_img"
                    android:layout_below="@+id/show_contribution_img"
                    android:layout_marginLeft="10dp"
                    android:text="@string/show_contribution_text_top"
                    android:textColor="@color/maintone"
                    android:textSize="8sp" />

            </RelativeLayout>

        </RelativeLayout>


        <View
            style="@style/h_line"
            android:layout_height="1px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="与我聊天需要支付："
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_video_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="0币/分钟"
                android:textColor="@color/admin_color"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            style="@style/h_line"
            android:layout_height="1px" />

        <include layout="@layout/view_bar_count" />

        <View
            style="@style/h_line"
            android:layout_height="1px" />

        <include layout="@layout/view_list_bar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="用户评价"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

    </LinearLayout>


    <include layout="@layout/view_back_top_bar" />
</RelativeLayout>