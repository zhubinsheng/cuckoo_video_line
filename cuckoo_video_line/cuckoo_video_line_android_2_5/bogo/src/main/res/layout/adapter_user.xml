<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rc_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pagemsg_background"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@mipmap/no_bac"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/live_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_beckoning_num"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pagemsg_view_dian"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/bg_green_num" />

                <TextView
                    android:id="@+id/pagemsg_view_isonline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="@string/userinfo_bar_isonLine"
                    android:textColor="@color/white"
                    android:textSize="8sp" />
            </LinearLayout>

        </RelativeLayout>

        <com.gcssloop.widget.RCRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:round_corner="10dp">

            <TextView
                android:id="@+id/pagemsg_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:maxWidth="50dp"
                android:maxLines="1"
                android:singleLine="true"
                android:text="2222"
                android:textColor="@color/gray"
                android:textSize="13sp"
                android:textStyle="bold" />

            <com.eliaovideo.videoline.widget.BGLevelTextView
                android:id="@+id/tv_level"
                android:layout_width="30dp"
                android:layout_height="14dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/pagemsg_view_name"
                android:textSize="8dp" />


            <TextView
                android:id="@+id/pagemsg_view_nice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text="@string/test_number"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/pagemsg_view_nice"
                android:src="@drawable/good_appraise"
                android:visibility="gone" />

            <TextView
                android:id="@+id/pagemsg_view_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pagemsg_view_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:text="暂无签名字段"
                android:textColor="@color/gray"
                android:textSize="13sp" />

        </com.gcssloop.widget.RCRelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>