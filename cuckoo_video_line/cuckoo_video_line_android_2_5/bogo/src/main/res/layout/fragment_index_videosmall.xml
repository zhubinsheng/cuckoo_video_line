<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.qmuiteam.qmui.widget.QMUIViewPager
        android:id="@+id/video_view_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabLayout_video_ll" />


    <View
        style="@style/h_line"
        android:layout_height="1px"
        android:layout_below="@+id/video_tab_segment"
        android:visibility="gone" />

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/video_tab_segment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/tabLayout_video_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:tabBackground="@android:color/transparent"
            app:tabIndicatorColor="@color/color_network_bar_bg_ee4b62"
            app:tabIndicatorHeight="0dp"
            app:tabSelectedTextColor="@color/black"
            app:tabTextColor="@color/text_gray1"></android.support.design.widget.TabLayout>

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/prize_to_upload"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/produce_video_entrance" />
    </RelativeLayout>

</RelativeLayout>